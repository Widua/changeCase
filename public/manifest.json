{
  "manifest_version": 3,
  "name": "Changecase",
  "version": "0.1",
  "description": "Browser extension, that helps you convert text to upper, lower or alternating case",
  "icons": {
    "16": "icons/icon_16.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Changecase",
    "default_popup": "popup.html"
  },
  "permissions": [
    "contextMenus","activeTab","scripting", "clipboardWrite"
  ]
}